<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="textView_mainLeft">
        <item name="android:textSize">@dimen/textSize_main</item>
    </style>


    <style name="profilePicture_mainLeft">
        <item name="android:padding">@dimen/iconMargin</item>
    </style>


    <style name="titleText_main">
        <item name="android:textSize">@dimen/titleSize</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="linearLayout_mainRight">
        <item name="android:background">@color/rightBcgColor</item>
        <item name="android:padding">@dimen/iconMargin</item>
    </style>


    <style name="nameText_main">
        <item name="android:textSize">@dimen/nameSize</item>
    </style>


    <style name="linearLayout_mainTop">
        <item name="android:padding">@dimen/iconMargin</item>
        <item name="android:background">@color/bcgColorTop</item>
    </style>

</resources>
